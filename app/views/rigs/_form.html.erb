<%= form_for rig do |f| %>
    <%= f.label :make %>
    <%= f.text_field :make %>
    <br><br>
    <%= f.label :model %>
    <%= f.text_field :model %>
    <br><br>
    <%= f.label :year_model %>
    <%= f.number_field :year_model, min: 0, step: 1950 %>
    <br><br>
     <%= f.label :active %>
 <%= f.check_box :active, {}, true, false %> <br />

    <%= f.submit "Create" %>
<% end %>